{% extends 'index.j2' %}
{% macro input(field,text,class) -%}
        <div class="row m-2 justify-content-start align-items-center g-2">
          <div class="col-md-2 ps-5">{{  field.label(class='form-label')}}</div>
          <div class="{{ class }} ps-5"> 
            <div class="input-group">
                <span class="input-group-text" id="inputorcid_id">{{ text }}</span>
                {% if field.errors %} 
                  {{ field(class='border-danger form-control') }}
            </div>        
                  <p class="ps-1" style="font-style: italic; color:brown"> {{ field.errors[0] }}</p>
                {% else %}    
                  {{ field(class='form-control') }}
            </div>
                {% endif %} 
          </div>  
        </div>
{% endmacro %}

{% block headers  %}
    
    <a href="https://nure.ua/?s={{ content.author[0][1] }}" target="_blank" class="d-flex align-items-center px-2 mb-2 mb-md-0 me-md-auto text-decoration-none">
        <img class="bi me-2" width="60" height="60" src="{{ url_for('static',filename='img/44069009-0.jpeg') }}" />
        <span class="fs-2 ku_header"><strong>{{ content.author[0][1] }}</strong></span> 
    </a> 
    <!-- {{ super() }} -->
    {% block menu_header %}
    {{ super() }}
    {% endblock menu_header %}
{% endblock headers %}

{% block main %}
    <form method="post" class="row justify-content-center" id="main_form">
      {{ form.hidden_tag() }} 
      <div class="col-8 mt-5 p-2 border border-primary border-2 ">  
  <div class="container-fluid "> 
  {% for cat, msg in get_flashed_messages(True) %}
    <div class="flash {{cat}} h5">{{msg}}</div>
  {% endfor %}  
        <div class="row row-cols-4 m-2 justify-content-start align-items-center g-2">
          <div class="col-md-1 ps-5">
              <label for="validationDefault01">ID</label> 
          </div>
          <div class="col-md-1">
              <input type="text" class="form-control" id="validationDefault01" value="{{ content.author[0][0] }}" disabled>
          </div>     
          <div class="col-1 px-4">
            {{ form.name_author.label(class='form-label')}}     
          </div>
          <div class="col-md-7">
              {{ form.name_author(class="form-control") }}
          </div>  
        </div>
        
        {{ input (form.scopus_id,'https://www.scopus/...','col-md-6')}}
        
        {{ input (form.orcid_id,'https://www.orcid.org/','col-md-7')}}

        {{ input (form.researcher_id,'R_ID','col-md-5')}}
        
        <div class="row m-2 justify-content-start align-items-top g-2">
          <div class="col-md-3 p-3">
            {{ form.depat.label(class='form-label')}}
            {{ form.depat(class='form-select') }}
          </div>  
          
          <div class="col-md-8 p-3 m-4 border border-grey">
            {{ form.list_lat_name.label }}
            {{ form.list_lat_name() }}
            
            
            {# <label for="fio_lat" class="form-label"><strong>ФИО латиница</strong></label>
            <textarea name="fio_lat" class="form-control" id="fio_lat" rows="2"  disabled>{{ content.author[0][6] }}</textarea> #}
            <div class="row mt-1 justify-content-start align-items-center g-2">
              <!-- <div class="col-md-2 ps-5"><label for="research_id" class="form-label"><strong></strong></label></div> -->
              <div class="col-md-7">
                {{ form.one_lat_name() }}  
              {# <input type="text" name="add_lat_name" class="form-control" id="research_id" value=""> #}
              </div>
              <div class="col-md-2">
                {{ form.submit_add(class="btn btn-info")}}
              {# <button class="btn btn-secondary" type="submit_add">Добавить</button> #}
              </div>
            </div>
          </div>  
        </div>  
        <div class="row mt-1 justify-content-between align-items-center g-2"> 
          <div class="col-4 p-4" >
            {{ form.submit_save(class="btn btn-success") }}
          </div>
          <div class="col-4 p-4" >
            {{ form.submit_escape(class="btn btn-secondary") }}
          </div>
          <div class="col-4 p-4" >
            <a name="help" id="" class="btn btn-danger" href="/delete/{{ content.author[0][0] }}" role="button">Удалить</a>  
          </div>
        </div>
      </div> 
    </form>
  {% endblock main %}


  




